#!/usr/bin/env bash

# fail fast
set -e

# parse args
export BUILD_DIR=$1

BIN_DIR=$(cd "$(dirname "$0")"; pwd) # absolute path

# shellcheck source=bin/java
source "$BIN_DIR/java"
# shellcheck source=bin/util
source "$BIN_DIR/util"

# Install JDK
install_java_with_overlay "${BUILD_DIR}" "${CACHE_DIR}"
